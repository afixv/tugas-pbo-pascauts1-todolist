@model IEnumerable<ToDoList.Models.TodoList>

@{
    ViewData["Title"] = "Home";
}

<h1 style="text-align:center; font-weight: 700;">To Do List</h1>
<h4 style="text-align:center;margin-bottom:2rem;">Tugas PBO - Afix Vega Praditya</h4>

<div class="btn btn-primary d-flex justify-content-center" style="padding: .6rem; max-width: 800px; margin: 1rem auto;">
    <a style="text-decoration:none; color: white;" asp-action="Create">
        <div style= "width: 800px; ";>

        </div>
        Create a New Item
        </a>
</div>

<table class="table" style= "max-width: 800px; margin-right: auto; margin-left: auto;">
    <thead>
        <tr>
            <th>
                Content
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="font-size: 1.1rem; padding-top: .6rem;">
                @item.Content
            </td>
            <td>
                <div class="d-flex justify-content-end">
                    <div class="btn btn-success" style="margin-right: .3rem;">
                        <a style="text-decoration:none; color: white;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </div>
                    <div class="btn btn-danger"> 
                        <a style="text-decoration:none; color: white;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
                
                
            </td>
        </tr>
}
    </tbody>
</table>
